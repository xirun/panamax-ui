%ul.application-button-menu
  %li
    = link_to 'Save as Template', new_template_path(app_id: app.id), class: 'template', title: 'save template'
  %li
    = link_to 'Deploy to Target', select_deployment_targets_path(resource_id: app.id, resource_type: 'App'), class: 'deploy select-deployment-target', title: 'save template'
  %li
    .sprocket-container{ data: { toggle: { class: 'expanded'} } }
      %ul.sprocket-menu
        %li
          = link_to 'Rebuild App', rebuild_app_path(app.id), method: :put, title: 'rebuild', class: 'link reload'
        %li
          = link_to 'Delete App', app_path(app.id), method: :delete, title: 'delete', class: 'delete'
